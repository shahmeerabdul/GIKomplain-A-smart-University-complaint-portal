// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          String    @default("STUDENT") // ENUM: STUDENT, FACULTY, STAFF, DEPT_OFFICER, ADMIN
  departmentId  String?
  department    Department? @relation(fields: [departmentId], references: [id])
  
  complaints    Complaint[] @relation("Complainant")
  assignedComplaints Complaint[] @relation("Officer")
  auditLogs     AuditLog[]
  comments      Comment[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  emailVerified     DateTime?
  verificationToken String?   @unique
}

model Department {
  id          String    @id @default(cuid())
  name        String    @unique
  users       User[]
  complaints  Complaint[]
}

model Complaint {
  id            String    @id @default(cuid())
  title         String
  description   String
  category      String
  status        String    @default("SUBMITTED") // ENUM: SUBMITTED, IN_PROGRESS, ESCALATED, RESOLVED
  
  complainantId String
  complainant   User      @relation("Complainant", fields: [complainantId], references: [id])
  
  assignedDeptId String?
  assignedDept   Department? @relation(fields: [assignedDeptId], references: [id])
  
  assignedOfficerId String?
  assignedOfficer   User?    @relation("Officer", fields: [assignedOfficerId], references: [id])

  attachments   Attachment[]
  auditLogs     AuditLog[]
  comments      Comment[]
  
  resolutionSummary String?
  internalNotes     String?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Attachment {
  id          String    @id @default(cuid())
  url         String
  name        String
  size        Int
  complaintId String
  complaint   Complaint @relation(fields: [complaintId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id          String    @id @default(cuid())
  action      String
  details     String?
  
  actorId     String
  actor       User      @relation(fields: [actorId], references: [id])
  
  targetId    String?   // ID of the entity being acted upon (e.g., Complaint ID)
  
  complaintId String?
  complaint   Complaint? @relation(fields: [complaintId], references: [id])
  
  createdAt   DateTime  @default(now())
}

model Comment {
  id          String    @id @default(cuid())
  content     String
  
  complaintId String
  complaint   Complaint @relation(fields: [complaintId], references: [id], onDelete: Cascade)
  
  authorId    String
  author      User      @relation(fields: [authorId], references: [id])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
